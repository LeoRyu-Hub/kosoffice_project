.calendar-section {
    display: flex;
    justify-content: center; /* 중앙 정렬 */
    align-items: center;
    margin-top: 30px;
}

.calendar-container {
    width: 100%; /* 달력의 너비를 80%로 설정 */
    max-width: 970px; /* 최대 너비 설정 (너무 넓어지지 않도록) */
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 30px;
    text-align: center;
}

.calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.calendar-header select {
    padding: 12px;
    font-size: 18px;
    margin-right: 15px;
}

.calendar-header button {
    padding: 12px 20px;
    font-size: 18px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.calendar-header button:hover {
    background-color: #0056b3;
}

.calendar-table {
    width: 100%;
    border-collapse: collapse;
}

.calendar-table th,
.calendar-table td {
    width: 14%;
    height: 60px;
    text-align: center;
    font-size: 22px;
    padding: 15px;
    border: 1px solid #ddd;
}

.calendar-table th {
    background-color: #f0f0f0;
}

.calendar-table td {
    background-color: #fff;
    cursor: pointer;
}

.calendar-table td:hover {
    background-color: #f1f1f1;
}

.calendar-table .today {
    background-color: #ffeb3b;
    font-weight: bold;
}

#calendarTitle {
    font-size: 30px;
    font-weight: bold;
}
